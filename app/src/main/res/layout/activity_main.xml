<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kateyeeum.braintrainer.MainActivity">

    <Button
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#fbbcbc"
        android:onClick="start"
        android:paddingBottom="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="20dp"
        android:text="Go!"
        android:textColor="#aaaaaa"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/sumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11+1"
            android:textColor="#f68080"
            android:textSize="37sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/timerTextView"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:background="#ffc59c"
            android:padding="5dp"
            android:text="0/0"
            android:textColor="#ffffff"
            android:textSize="27sp"
            android:layout_alignTop="@+id/sumTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="26dp"
            android:background="#ffc59c"
            android:padding="5dp"
            android:text="30s"
            android:textColor="#ffffff"
            android:textSize="27sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:text="Correct!"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:layout_below="@+id/scoreTextView"
            android:layout_centerHorizontal="true"
            android:id="@+id/gridLayout">

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:background="#ffd0d0"
                android:padding="40dp"
                android:text="20"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,UnusedAttribute" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:background="#d4fd69"
                android:padding="40dp"
                android:text="20"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:background="#aadefa"
                android:padding="40dp"
                android:text="20"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:background="#f4adff"
                android:padding="40dp"
                android:text="20"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </GridLayout>
    </RelativeLayout>
</RelativeLayout>
